{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "strictNullChecks": true
  }
}
